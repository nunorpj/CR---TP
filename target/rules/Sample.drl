rule "PS KARNOFSKY"
	salience 59

    when
    	exists HCC();
        $p : Paciente(PS_KARNOFSKY == -1);
    then
    
    	int result = Integer.parseInt(JOptionPane.showInputDialog(null,
    	"Indique escala de desempenho Karnofsky do paciente:\n\n"	+
    		"100 - Normal, sem queixas e sem ividencia de doenças\n"+
    		"\t90 - Capaz de efectuar tarefas normais, sintomas ou sinais de doença menores \n"+
    	"\t80 - Atividade normal com esforço, alguns sinais ou sintomas de doença\n"+
    	"\t70 - Cuida de si mesmo, mas incapaz de realizar uma atividade normal ou de fazer um trabalho ativo\n"+
    	"\t60 - Requer assistência ocasional, mas é capaz de cuidar da maioria das necessidades pessoais\n"+
    	"\t50 - Requer assistência considerável e cuidados médicos freqüentes\n"+
    	"\t40 - Deficente,requer cuidados e assistência especiais\n"+
    	"\t30 - Deficente sério, a hospitalização é indicada, embora a morte não seja iminente\n"+
    	"\t20 - Muito doente,  hospitalização e cuidados de suporte ativos necessários\n"+
    	"\t10 - Moribundo\n"+
    	"\t0 - Morto",
    	"Escala de desempenho Karnofsky",JOptionPane.QUESTION_MESSAGE));

		if(result>=0 && result<=100){
			$p.setPS_KARNOFSKY(result);;
		}else{
			$p.setPS_KARNOFSKY(-1);
		}
		update($p);
        
end

