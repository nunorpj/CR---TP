rule "pressão portal"//feito
	salience 44
	when 
		$h : HCC(stage=='A');
		$p : Paciente(Nnodulos==1 && PressaoPortal==-1 && Tratamento == "VAZIO");
	then
		Object[] options = {"Sim","Não"};
		int op = JOptionPane.showOptionDialog(null, "O pacinete "+$p.getNome()+" tem pressão portal aumentada?", "Pressão Portal",
    		JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.QUESTION_MESSAGE,
