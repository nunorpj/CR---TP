    	}else{
    	    $n.setExame(2);
    	   	JOptionPane.showMessageDialog(null, "O paciente " + $p.getNome()+ " necessita de Realizar TC ou RM dinamica com contraste", "TC ou RM dinamica com contraste",JOptionPane.WARNING_MESSAGE);        
    	   	
    	}
    	update($n)
        
end




//alterar esta para comparar com o tamanho inicial
rule "US"
	salience 71
    when
        $n :Nodule(exame==0)
        not HCC();
    then

    	float t = Float.parseFloat(JOptionPane.showInputDialog(null,"Qual o tamanho do nodulo registado na US " + $n.getId() + " no US ?" + $n.getId(),"US ao Nodulo " + $n.getId(),JOptionPane.QUESTION_MESSAGE));
    	
    	$n.setTamanho(t);
    	if(t<1){
    		$n.setExame(1);
    		JOptionPane.showMessageDialog(null, "Estavel, reptir US daqui a 4 meses", "Resultado da US ao Nodulo " + $n.getId(),JOptionPane.WARNING_MESSAGE);        
    		
    	}else if(t>1 &&t<2){
    		$n.setExame(3);//preciso de vereficar se o equipamento é sofisticado
    		JOptionPane.showMessageDialog(null, "Nodulo com " + t + "cm é necessario um CT ou RM Dinamica com contraste \n Recomendado centro de excelencia ",  "Resultado da US ao Nodulo " + $n.getId(),JOptionPane.WARNING_MESSAGE);        

        }else if(t>2){
       	 	$n.setExame(2);
    		JOptionPane.showMessageDialog(null, "Nodulo com " + t + "cm é necessario um CT ou RM Dinamica com contraste", "Resultado da US ao Nodulo " + $n.getId(),JOptionPane.WARNING_MESSAGE);        
       	 }
        update($n);
        
end


rule "ct e rm"
	salience 70
    when
        $n :Nodule(exame==2 || exame ==3);
        not HCC();
    then
    
        int nPositives = Integer.parseInt(JOptionPane.showInputDialog(null,"Quantas tecnicas ficaram positivas no nodulo " + $n.getId() + "?(1 ou 2)" + $n.getId(),"CT e RM ao Nodulo " + $n.getId(),JOptionPane.QUESTION_MESSAGE));

		if(nPositives == 0){
			JOptionPane.showMessageDialog(null, "É necessario uma Biopsia !",  "CT e RM ao Nodulo " + $n.getId(),JOptionPane.WARNING_MESSAGE);        
			
			$n.setExame(4);
		}else if(nPositives==2 || ($n.getExame()==2 && nPositives == 1)){
			JOptionPane.showMessageDialog(null, "É HCC!",  "CT e RM ao Nodulo  " + $n.getId(),JOptionPane.WARNING_MESSAGE);        
			$n.setExame(5);
			insert(new HCC());
		}
		update($n);
end


