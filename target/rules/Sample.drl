    then
    	if($n.getTamanho()<1){
    		$n.setExame(0);
			JOptionPane.showMessageDialog(null, "O paciente " + $p.getNome()+ " necessita de fazer um US", "US",JOptionPane.WARNING_MESSAGE);        
