rule "paciente tem cirrose"
	salience 100
    when
        $p : Paciente(cirrose == -1);
    then

        Object[] options = {"Sim","Não"};
		int op = JOptionPane.showOptionDialog(null, "O Paciente " + $p.getNome()+ " tem cirrose?", "Cirrose",
    		JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.QUESTION_MESSAGE,
    		null,options,options[1]);


		if(op==0){
			$p.setCirrose(1);
		}else{
			$p.setCirrose(0);
			$p.setFibroseHipaticaAvançada(0);
			$p.setaAguardarTransplanteHepático(0);
			$p.setEstadio('0');
		}
		update($p);
        
end

rule "child-pugh"
	salience 99
    when
        $p : Paciente(estadio == 'F' && cirrose == 1);
    then
    	 Object[] options = {"A","B","C","Nenhum"};
		int op = JOptionPane.showOptionDialog(null, "O Paciente " + $p.getNome()+ " esta em que estagio de Child-Pugh?", "Child-Pugh",
    		JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.QUESTION_MESSAGE,
    		null,options,options[3]);
    		
    		
    	switch(op){
    	
    	case 0:
    		$p.setEstadio('A');
    		break;
    	case 1:
			$p.setEstadio('B');
    		break;
    	case 2:
    		$p.setEstadio('C');
    		break;
    	case 3:
    		$p.setEstadio('0');
    		break;
    	};
		update($p);
        
end




